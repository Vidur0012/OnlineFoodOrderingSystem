@model FoodOrderingSystem.Models.OrderList
<h1>AddCard</h1>
<div class="container">
    <div class="row">
        <div class="col-sm-4 mx-auto">
            <form asp-action="AddCard" method="post">
                <label>Item</label>
                <input  asp-for="Item" class="form-control" value="@ViewBag.var1" />
                <br />
                <label>Quantity</label>
                <input asp-for="Quantity" class="form-control" />
                <span style="color:red" asp-validation-for="Quantity"></span>
                <br />
                <label>Price</label>
                <input  asp-for="TotalPrice" class="form-control" value="@ViewBag.var2" />
                <br />
                <input type="submit" value="ADD" /><br /><br />
                <a asp-controller="Gujaratis" asp-action="Index">Back</a>
            </form>
        </div>
    </div>
</div>

