@model FoodOrderingSystem.Models.OrderList
<h1>Add to Cart</h1><br /><br />
<div class="container">
    <div class="row">
        <div class="col-sm-4 mx-auto">
            <form asp-action="AddCart" method="post">
                <div style="font-size:30px">Item  :  @ViewBag.var1</div>
                <input type="hidden" asp-for="Item" class="form-control" value="@ViewBag.var1" />
                <br />
                <div style="font-size:30px">Price :  @ViewBag.var2</div>
                <input type="hidden" asp-for="TotalPrice" class="form-control" value="@ViewBag.var2" />
                <br />
                <div style="font-size:20px">Quantity</div>

                <input asp-for="Quantity" class="form-control" />
                <br /><br />

                <input class="btn btn-primary " type="submit" value=" ADD " />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <a class="btn btn-outline-secondary" asp-controller="Gujaratis" asp-action="Index"><b>Back</b></a>

            </form>
        </div>
    </div>
</div>

